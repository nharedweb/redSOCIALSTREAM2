<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSOCIALSTREAM_ID_LABEL"
                description="COM_REDSOCIALSTREAM_ID_DESC"
                readonly="true"
                />
        <field
                name="name"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_PROFILE_FIELD_NAME_LABEL"
                description="COM_REDSOCIALSTREAM_PROFILE_FIELD_NAME_DESC"
                required="true"
                />

        <field
                name="title"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_PROFILE_FIELD_TITLE_LABEL"
                description="COM_REDSOCIALSTREAM_PROFILE_FIELD_TITLE_DESC"
                required="true"
                />

        <field
                name="type_id"
                type="ptypes"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_PROFILE_FIELD_TYPE_LABEL"
                description="COM_REDSOCIALSTREAM_PROFILE_FIELD_TYPE_DESC"
                />

        <field
                name="group_id"
                type="groups"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_PROFILE_FIELD_GROUP_LABEL"
                description="COM_REDSOCIALSTREAM_PROFILE_FIELD_GROUP_DESC"
                />
        <field
                name="ordering"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_FIELD_ORDERING_LABEL"
                description="COM_REDSOCIALSTREAM_FIELD_ORDERING_DESC"
                />

        <field
                name="state"
                type="radio"
                label="COM_REDSOCIALSTREAM_FIELD_STATE_LABEL"
                description="COM_REDSOCIALSTREAM_FIELD_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
        </field>

    </fieldset>
</form>
