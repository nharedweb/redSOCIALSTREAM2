<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSOCIALSTREAM_ID_LABEL"
                description="COM_REDSOCIALSTREAM_ID_DESC"
                readonly="true"
                />
        <field
                name="name"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_GROUP_FIELD_NAME_LABEL"
                description="COM_REDSOCIALSTREAM_GROUP_FIELD_NAME_DESC"
                required="true"
                />

        <field
                name="title"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_GROUP_FIELD_TITLE_LABEL"
                description="COM_REDSOCIALSTREAM_GROUP_FIELD_TITLE_DESC"
                required="true"
                />

        <field
                name="intro"
                type="editor"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_GROUP_FIELD_INTRO_LABEL"
                description="COM_REDSOCIALSTREAM_GROUP_FIELD_INTRO_DESC"
                />

        <field
                name="link"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_GROUP_FIELD_LINK_LABEL"
                description="COM_REDSOCIALSTREAM_GROUP_FIELD_LINK_DESC"
                />
        <field
                name="state"
                type="radio"
                label="COM_REDSOCIALSTREAM_GROUP_FIELD_STATE_LABEL"
                description="COM_REDSOCIALSTREAM_GROUP_FIELD_STATE_LABEL"
                required="true"
                class="btn-group"
                default="1"
                >
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
        </field>

    </fieldset>
</form>
