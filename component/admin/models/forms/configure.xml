<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSOCIALSTREAM_ID_LABEL"
                description="COM_REDSOCIALSTREAM_ID_DESC"
                readonly="true"
                />

        <!-- Facebook tab -->
        <field
                name="fb_key"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_FB_KEY_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_FB_KEY_DESC"
                required="true"
                />
        <field
                name="fb_secret"
                type="password"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_FB_SECRET_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_FB_SECRET_DESC"
                required="true"
                />
        <field
                name="fb_intro"
                type="textarea"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_DESC"
                />
        <field
                name="fb_type_id"
                type="configtypes"
                default="0"
                readonly="true"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_DESC"
                />

        <!-- Twitter tab -->
        <field
                name="tw_key"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TW_KEY_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TW_KEY_DESC"
                required="true"
                />
        <field
                name="tw_secret"
                type="password"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TW_SECRET_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TW_SECRET_DESC"
                required="true"
                />
        <field
                name="tw_intro"
                type="textarea"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_DESC"
                />
        <field
                name="tw_type_id"
                type="configtypes"
                readonly="true"
                default="1"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_DESC"
                />

        <!-- Linkedin tab -->
        <field
                name="lk_key"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_LK_KEY_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_LK_KEY_DESC"
                required="true"
                />
        <field
                name="lk_secret"
                type="password"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_LK_SECRET_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_LK_SECRET_DESC"
                required="true"
                />
        <field
                name="lk_intro"
                type="textarea"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_DESC"
                />
        <field
                name="lk_type_id"
                type="configtypes"
                readonly="true"
                default="0"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_DESC"
                />

    </fieldset>
</form>
