<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <field
                name="id"
                type="hidden"
                default="0"
                label="COM_REDSOCIALSTREAM_ID_LABEL"
                description="COM_REDSOCIALSTREAM_ID_DESC"
                readonly="true"
                />
        <field
                name="type_id"
                type="ptypes"
                default="0"
                readonly="true"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_TYPE_DESC"
                required="true"
                />
        <field
                name="profile_id"
                type="profiles"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_PROFILE_ID_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_PROFILE_ID_DESC"
                required="true"
                />
        <field
                name="key"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_KEY_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_KEY_DESC"
                required="true"
                />
        <field
                name="secret"
                type="password"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_SECRET_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_SECRET_DESC"
                required="true"
                />
        <field
                name="intro"
                type="textarea"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_LABEL"
                description="COM_REDSOCIALSTREAM_CONFIGURE_FIELD_INTRO_DESC"
                />
        <field
                name="ordering"
                type="text"
                class="inputbox"
                label="COM_REDSOCIALSTREAM_FIELD_ORDERING_LABEL"
                description="COM_REDSOCIALSTREAM_FIELD_ORDERING_DESC"
                />

        <field
                name="state"
                type="radio"
                label="COM_REDSOCIALSTREAM_FIELD_STATE_LABEL"
                description="COM_REDSOCIALSTREAM_FIELD_STATE_DESC"
                required="true"
                class="btn-group"
                default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
    </fieldset>
</form>
